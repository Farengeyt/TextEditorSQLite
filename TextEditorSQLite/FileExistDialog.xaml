<Window x:Class="TextEditorSQLite.FileExistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorSQLite"
        mc:Ignorable="d"
        Title="FileExistDialog" Height="200" Width="310"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Margin="10" TextWrapping="Wrap" TextAlignment="Center" Text="File with such name is already exist. Do you want substitute file?"/>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Width="130" Margin="10" Content="Yes" Click="Yes_click"/>
                <Button Width="130" Margin="10" Click="No_click" Content="No, chose other name"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
